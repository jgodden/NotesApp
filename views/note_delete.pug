extends layout

block content
  div(class="row gx-0")
    div(class="col-sm-3")
      p Title:
    div(class="col-sm-6")
      p #{note.title}
  div(class="row mb-3 gx-0")
    div(class="col-sm-3")
      p Creation date:
    div(class="col-sm-6")
      p #{note.creationDate_formatted}
  div(class="row mb-3 gx-0")
    div(class="col-sm-12")
      p Are you sure you want to delete this Note?

  form(method='POST' action='')
    div.form-group
      input#noteid.form-control(type='hidden',name='noteid' value=note._id )
      input#note_image.form-control(type='hidden',name='note_image' value=note.image )
      input#subjectid.form-control(type='hidden',name='subjectid' value=note.subject_id )
      input#topicid.form-control(type='hidden',name='topicid' value=note.topic_id )
      input#subtopicid.form-control(type='hidden',name='subtopicid' value=note.subtopic_id )

      div(class="row gx-0")
        div(class="col-6")
          button.btn.btn-secondary.btn-sm(type='button' onclick="return confirmCancel(this);" id='cancel_button') Cancel
        div(class="col-6")
          button.btn.btn-danger.btn-sm(type='submit') Delete