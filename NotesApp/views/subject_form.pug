extends layout

block content
  div.topic
    form(method='POST' action='')
      div.form-group
        label(for='subject') Subject:
        input#subject.form-control(type='text' placeholder='Subject' name='title' required='true' value=(undefined===subject ? '' : subject.title) )
      button.btn.btn-primary(type='submit') Submit
    if errors
      ul
        for error in errors
          li!= error.msg